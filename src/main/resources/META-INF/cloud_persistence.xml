<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="footballscraper">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://football-stats.mysql.database.azure.com:3306/football"/>
            <property name="javax.persistence.jdbc.user" value="FootballAdmin"/>
            <property name="javax.persistence.jdbc.password" value="Database123"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>

            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>

<!--            Change to update if you want to create the database yourself-->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <!-- <property name="hibernate.hbm2ddl.auto" value="update"/> -->
        </properties>
    </persistence-unit>

</persistence>